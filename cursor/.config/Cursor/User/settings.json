{
    "window.openFilesInNewWindow": "on",
    "window.menuBarVisibility": "compact",

    "problems.visibility": false,

    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontSize": 13,
    "editor.dragAndDrop": false,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "editor.parameterHints.enabled": false,
    "editor.inlayHints.enabled": "off",
    "editor.inlineSuggest.enabled": false,
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.showInlineDetails": false,
    "editor.suggestOnTriggerCharacters": false,
    "editor.suggest.preview": false,
    "editor.suggest.localityBonus": false,
    "editor.suggest.shareSuggestSelections": false,
    "editor.suggest.selectionMode": "never",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.snippetSuggestions": "none",
    "editor.snippets.codeActions.enabled": false,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.tabCompletion": "off",
    "editor.lightbulb.enabled": "off",
    "editor.renderControlCharacters": false,
    "editor.matchBrackets": "near",
    "editor.guides.highlightActiveBracketPair": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingOvertype": "never",
    "editor.autoClosingQuotes": "never",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.cursorSurroundingLines": 0,
    "editor.cursorBlinking": "solid",
    "editor.codeLens": false,
    "editor.colorDecorators": false,
    "editor.foldingHighlight": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.guides.indentation": false,
    "editor.hover.enabled": false,
    "editor.lineNumbers": "off",
    "editor.occurrencesHighlight": "off",
    "editor.semanticHighlighting.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "none",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "editor.overviewRulerBorder": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,

    // Scrolling.
    "editor.smoothScrolling": true,
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.verticalScrollbarSize": 20,
    "editor.scrollBeyondLastLine": false,
    "editor.stickyScroll.enabled": false,

    // Hides fold markers. This makes the gutters more narrow.
    "editor.folding": false,

    "explorer.sortOrder": "type",

    "workbench.editor.decorations.colors": false,
    "workbench.settings.editor": "json",
    "workbench.editor.showTabs": "none",
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-simpleBrowser.view": false,
        "mainThreadWebview-browserPreview": false
    },
    "workbench.colorCustomizations": {
        "editorGutter.addedBackground": "#0000",
        "editorGutter.modifiedBackground": "#0000",
        "editorGutter.deletedBackground": "#0000",
        "editorGroupBorder": "#00000000",
        "editorGroupHeader.tabsBorder": "#00000000"
    },
    "workbench.navigationControl.enabled": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",

    "git.decorations.enabled": false,
    "git.blame.statusBarItem.enabled": false,
    "git.enableStatusBarSync": false,
    "git.timeline.showUncommitted": true,
    "git.openRepositoryInParentFolders": "always",
    "update.mode": "manual",
    "markdown.editor.updateLinksOnPaste.enabled": false,
    "files.trimTrailingWhitespace": true,

    "breadcrumbs.enabled": false,

    "telemetry.feedback.enabled": false,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "extensions.autoCheckUpdates": false,
    "extensions.ignoreRecommendations": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["s", "v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["s", "h"],
            "commands": ["workbench.action.splitEditorDown"]
        }
    ],
    "vscode-neovim.ctrlKeysForInsertMode": [
        "a", "c", "m", "o", "r", "t", "w", "n"
    ],
    "vscode-neovim.ctrlKeysForNormalMode": [
        "o", "i", "d", "u", "a", "w", "r"
    ],

    "html.suggest.html5": false,
    "[gdscript]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },

    "cursor.cpp.enablePartialAccepts": false,
    "cursor.cpp.disabledLanguages": ["*"],
    "cursor.general.enableShadowWorkspace": false,
}


